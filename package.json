{
  "name": "mlogjs",
  "version": "0.2.0",
  "description": "Compiler that compiles Javascript to Mindustry Logic Code.",
  "main": "build/index.js",
  "bin": "./build/bin.js",
  "scripts": {
    "clean": "rm -rf docs dist build",
    "build": "tsc && vite build",
    "build:editor": "cd editor && vite build",
    "dev": "ts-node src/bin",
    "dev:editor": "cd editor && vite",
    "test": "jest",
    "coverage": "jest --coverage",
    "docs:doc": "mkdir -p docs && cp doc/* docs",
    "docs:lib": "typedoc --out docs/lib lib/index.d.ts",
    "docs:src": "typedoc --out docs/src src/index.ts",
    "docs": "run-p docs:lib docs:src docs:doc",
    "start": "npm run build && npm i -g . && mlogjs",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    "require": "./build/index.js",
    "import": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weisrc/mlogjs.git"
  },
  "packageManager": "yarn@3.2.0",
  "keywords": [],
  "author": "str1z",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weisrc/mlogjs/issues"
  },
  "homepage": "https://github.com/weisrc/mlogjs#readme",
  "dependencies": {
    "acorn": "^8.7.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@monaco-editor/react": "^4.3.1",
    "@types/estree": "^0.0.51",
    "@types/jest": "^27.4.1",
    "@types/node": "^15.3.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@types/react-split-pane": "^0.1.67",
    "@types/yargs": "^16.0.1",
    "@vitejs/plugin-react": "^1.2.0",
    "jest": "^27.5.1",
    "monaco-editor": "^0.32.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-split-pane": "^0.1.92",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "typedoc": "^0.22.12",
    "typescript": "^4.6.2",
    "vite": "^2.8.6"
  },
  "files": [
    "build",
    "dist",
    "lib",
    "LICENSE",
    "README.md"
  ]
}
